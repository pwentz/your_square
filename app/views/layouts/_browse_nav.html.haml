.nav-bar-browse
  %ul.dropdown.menu.align-right{ 'data-dropdown-menu' => ''}
    %li.user-info
      - if current_user
        %a
          %i{class: 'fi-torso'}
          = current_user.username
          %ul.menu
            %li
              = link_to 'Dashboard', dashboard_path
            %li
              = link_to 'Logout', logout_path, method: 'delete'
      - else
        %a{ href: '/login' } Login

    %ul.menu
      %li
        = link_to 'YourSquare', root_path, class: 'menu-text'
      %li
        %input{ type: 'text', placeholder: "I'm looking for..."}
      %li
        %input{ type: 'text', placeholder: "Location", class: 'nav-location'}
